# Backend Environment Variables
# Copy this file to .env and fill in your values

# Gemini API Key (required)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, defaults to gemini-2.5-flash-lite)
GEMINI_MODEL=gemini-2.5-flash-lite

# Firebase (optional, for authentication)
# Place your firebase-credentials.json in the backend folder

# Server
HOST=0.0.0.0
PORT=8000

# CORS origins (comma-separated). Add your frontend domains here.
# Example: http://localhost:3000,https://your-app.vercel.app
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://*.vercel.app,https://ai-chat-bot-brown.vercel.app,https://ai-chat-bot-1-m0uq.onrender.com

DEBUG=True
MAX_TOKENS=2048
TEMPERATURE=0.7
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
